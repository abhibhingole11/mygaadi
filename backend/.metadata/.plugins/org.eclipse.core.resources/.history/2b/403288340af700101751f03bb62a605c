package com.mygaadi.repository;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;

import com.mygaadi.entity.Car;
import com.mygaadi.entity.User;
import com.mygaadi.entity.Wishlist;

public interface WishlistRepository extends JpaRepository<Wishlist, Long> {

    List<Wishlist> findByBuyer(User buyer);

    Optional<Wishlist> findByBuyerAndCar(User buyer, Car car);
}
