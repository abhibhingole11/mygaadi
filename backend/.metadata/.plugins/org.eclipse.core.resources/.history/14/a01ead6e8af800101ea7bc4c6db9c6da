package com.mygaadi.config;

import java.util.HashMap;
import java.util.Map;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import com.cloudinary.Cloudinary;

@Configuration
public class CloudinaryConfig {

    @Bean
    public Cloudinary cloudinary() {
        Map<String, String> config = new HashMap<>();
        config.put("cloud_name", System.getenv().getOrDefault("CLOUDINARY_CLOUD_NAME", ""));
        config.put("api_key", System.getenv().getOrDefault("CLOUDINARY_API_KEY", ""));
        config.put("api_secret", System.getenv().getOrDefault("CLOUDINARY_API_SECRET", ""));
        return new Cloudinary(config);
    }
}
